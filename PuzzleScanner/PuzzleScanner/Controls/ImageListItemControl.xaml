<Grid x:Class="PuzzleScanner.Controls.ImageListItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PuzzleScanner.Controls"
             Height="20">
    <Ellipse x:Name="StatusCircle" Height="20" Width="20" HorizontalAlignment="Left" Fill="Red" VerticalAlignment="Center"/>
    <TextBlock x:Name="ItemLabel" Height="20" Margin="24,0,24,0" VerticalAlignment="Center" FontSize="16"/>
    <ListBox x:Name="ItemChildren" Margin="0,20,0,0" Visibility="Hidden"/>
    <Button x:Name="DeleteButton" Content="×" HorizontalAlignment="Right" Width="20" Height="20" TextBlock.FontSize="16"  HorizontalContentAlignment="Center" VerticalContentAlignment="Top" ScrollViewer.VerticalScrollBarVisibility="Disabled" FontFamily="MS Gothic"/>
</Grid>
