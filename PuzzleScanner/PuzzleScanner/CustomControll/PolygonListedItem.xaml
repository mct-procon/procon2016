<Grid x:Class="PuzzleScanner.CustomControll.PolygonListedItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PuzzleScanner.CustomControll"
             Height="25" Margin="2"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ToggleButton x:Name="EnableButton" IsChecked="True" HorizontalAlignment="Left" Width="20" />
        <ToggleButton x:Name="FrameButton" Content="Frame"  HorizontalAlignment="Left" Width="60" Margin="25,0,0,0"/>
        <TextBlock x:Name="DescriptionLabel" Margin="100,0,0,0" />
    </Grid>
</Grid>
