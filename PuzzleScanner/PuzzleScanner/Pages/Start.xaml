<Page x:Class="PuzzleScanner.Pages.Start"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="Start">

    <Grid>
        <Grid.Resources>
            <ResourceDictionary Source="/Styles/NormalControls.xaml"/>
        </Grid.Resources>
        <TextBlock Text="Choose Acceralator" FontFamily="Segoe UI Light" FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="CPUButton" HorizontalAlignment="Left" VerticalAlignment="Top" Content="None(CPU)" Margin="18,60,0,0" Height="90" Width="140" Click="CPUButtonClicked"/>
        <Button x:Name="OpenCLButton" HorizontalAlignment="Left" VerticalAlignment="Top" Content="OpenCL" Margin="170,60,0,0" Height="90" Width="140" Click="OpenCLButtonClicked"/>
    </Grid>
</Page>
