<Page x:Class="PuzzleScanner.Pages.Start"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" Loaded="Page_Loaded"
      d:DesignHeight="322.163" d:DesignWidth="493.404"
      Title="Start">

    <Grid>
        <Grid.Resources>
            <ResourceDictionary Source="/Styles/NormalControls.xaml"/>
        </Grid.Resources>
        <TextBlock Text="Select Acceralator" FontFamily="Segoe UI Light" FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <StackPanel Margin="20,60,90,150" Orientation="Horizontal">
            <RadioButton x:Name="CPU" HorizontalAlignment="Left" VerticalAlignment="Top" Content="None(CPU)" Height="90" Width="140" Style="{StaticResource {x:Type ToggleButton}}" IsChecked="True"/>
            <RadioButton x:Name="OpenCL" HorizontalAlignment="Left" VerticalAlignment="Top" Content="OpenCL" Margin="10,0,0,0" Height="90" Width="140" Style="{StaticResource {x:Type ToggleButton}}" IsEnabled="false"/>
        </StackPanel>
        <TextBlock Text="Start Action" FontFamily="Segoe UI Light" FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,155,0,0"/>
        <Button x:Name="ScanWithCameraButton" Content="Scan With Camera" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,213,0,0" Height="90" Width="140" IsEnabled="false" Click="ScanWithCameraClicked"/>
        <Button x:Name="ScanWithScannerButton" Content="Scan With Scanner&#xa;(Not Tested)" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="170,213,0,0" Height="90" Width="140" IsEnabled="false"/>
        <Button x:Name="SolveOnly" Content="Puzzle Solve" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="320,213,0,0" Height="90" Width="140" IsEnabled="false"/>
    </Grid>
</Page>
