<Page x:Class="PuzzleScanner.Pages.Main_FilterWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PuzzleScanner.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Main_FilterWindow">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Slider x:Name="H_MAX" Grid.Column="1" Maximum="360" Minimum="0" Value="30" ValueChanged="Slider_ValueChanged"/>
        <Slider x:Name="H_MIN" Grid.Column="1" Grid.Row="1" Maximum="360" Minimum="0" Value="0" ValueChanged="Slider_ValueChanged"/>
        <TextBlock Text="H"/>
        <Slider x:Name="S_MAX" Grid.Column="1" Grid.Row="2" Maximum="100" Minimum="0" Value="70" ValueChanged="Slider_ValueChanged"/>
        <Slider x:Name="S_MIN" Grid.Column="1" Grid.Row="3" Maximum="100" Minimum="0" Value="20" ValueChanged="Slider_ValueChanged"/>
        <TextBlock Text="S" Grid.Row="2"/>
        <Slider x:Name="V_MAX" Grid.Column="1" Grid.Row="4" MaxHeight="100" Minimum="0" Value="70" ValueChanged="Slider_ValueChanged"/>
        <Slider x:Name="V_MIN" Grid.Column="1" Grid.Row="5" MaxHeight="100" Minimum="0" Value="30" ValueChanged="Slider_ValueChanged"/>
        <TextBlock Text="V" Grid.Row="4"/>
        <Image x:Name="img" Grid.Row="6" Grid.ColumnSpan="2"/>
        <Button Content="Update" Grid.Row="7" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,70,5" Width="60" Height="25" Click="Update_Click"/>
        <Button Content="Next" Grid.Row="7" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,5" Width="60" Height="25"/>
    </Grid>
</Page>
