<Grid x:Class="SonnaPuzzle.CustomControll.PolygonListedItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SonnaPuzzle.CustomControll"
             Height="25" Margin="2"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Rectangle x:Name="LabelColor" Width="25" HorizontalAlignment="Left" Fill="Black"/>
        <ToggleButton x:Name="EnableButton" IsChecked="True" HorizontalAlignment="Left" Width="25" Margin="30,0,0,0" />
        <ToggleButton x:Name="FrameButton" Content="Frame"  HorizontalAlignment="Left" Width="60" Margin="58,0,0,0"/>
        <TextBlock x:Name="DescriptionLabel" Margin="123,0,0,0" />
    </Grid>
</Grid>
